<div class="row col-lg-12 col-lg-offset-1 form-group">
	<h3>ROUNDS</h3>
	<div class="col-lg-6" id="sex">
		<label>
  	<input type="radio" value="male" id="male" name="sex">
  	MALE</label>
	</div>
	<div class="col-lg-6">
		<label>
  	<input type="radio" value="female" id="female" name="sex">
		FEMALE</label>
	</div>
</div>
<div class="row col-lg-12 col-lg-offset-1 form-group">
	<div class="col-lg-6">
		<label for="hours">HOURS PASSED</label>
		<select class="form-control input-lg" name="hours">
		  <option>1</option>
		  <option>2</option>
		  <option>3</option>
		  <option>4</option>
		  <option>5</option>
		  <option>6</option>
		  <option>7</option>
		  <option>8</option>
		  <option>9</option>
		</select>
	</div>
	<div class="col-lg-6">
		<label for="lbs">WEIGHT IN LBS</label>
    <input class="form-control input-lg" type="password" id="lbs" name="lbs" placeholder="***">
	</div>
</div>
<div class="row col-lg-12 col-lg-offset-1 form-group">
	<div class="col-lg-6">
		<label for="drinks">&numero; of DRINKS</label>
		<select class="form-control input-lg" name="drinks">
		  <option>1</option>
		  <option>2</option>
		  <option>3</option>
		  <option>4</option>
		  <option>5</option>
		  <option>6</option>
		  <option>7</option>
		  <option>8</option>
		  <option>9</option>
		</select>
	</div>
	<div class="col-lg-6">
		<label for="ABV">ALCOHOL %</label>
		<input class="form-control input-lg" type="text" id="abv" name="abv" placeholder="4.5">
	</div>
</div>
<div class="row col-lg-12 col-lg-offset-1 form-group">
	<button type="button" class="btn btn-default btn-lg btn-block">+ ADD MORE DRINKS</button>
</div>