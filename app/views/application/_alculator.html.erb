
<div id="alculator">
	<div class="form-group row col-xs-12">
		<h1><em>ALC</em>ULATOR</h1>
		<div class="col-xs-1">
			<label class="radio">MALE</label>
	  	<input type="radio" value="male" id="male" name="inlineRadioOptions">
		</div>
		<div class="col-xs-1">
			<label class="radio">FEMALE</label>
	  	<input type="radio" value="female" id="female" name="inlineRadioOptions">
		</div>
	</div>
	<div class="form-group row col-xs-12">
		<div class="col-xs-2">
			<label for="lbs">WEIGHT</label>
	    <input class="form-control" type="password" id="lbs" placeholder="Lbs">
		</div>
		<div class="col-xs-2">
			<label for="hours">HOURS</label>
			<select class="form-control">
			  <option>1</option>
			  <option>2</option>
			  <option>3</option>
			  <option>4</option>
			  <option>5</option>
			  <option>6</option>
			  <option>7</option>
			  <option>8</option>
			  <option>9</option>
			</select>
		</div>
	</div>
	<div class="form-group row col-xs-12">
		<div class="col-xs-2">
			<label for="drinks">&numero; of DRINKS</label>
			<select class="form-control">
			  <option>1</option>
			  <option>2</option>
			  <option>3</option>
			  <option>4</option>
			  <option>5</option>
			  <option>6</option>
			  <option>7</option>
			  <option>8</option>
			  <option>9</option>
			</select>
		</div>
		<div class="col-xs-2">
			<label for="ABV">ALCOHOL %</label>
			<input class="form-control" type="text" id="abv" name="abv" placeholder="4.5">
		</div>
	</div>
	<div class="form-group row col-xs-12">
		<div class="col-xs-2">
			<input class="btn btn-default" type="submit" value="SUBMIT">
		</div>
		<div class="col-xs-2">
			<input class="btn btn-default" type="reset" value="RESET">
		</div>
	</div>
</div>